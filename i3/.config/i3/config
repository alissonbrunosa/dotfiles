# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

#Volume Controls
bindsym XF86AudioMute exec --no-startup-id volumectl mute
bindsym XF86AudioLowerVolume exec --no-startup-id volumectl minus
bindsym XF86AudioRaiseVolume exec --no-startup-id volumectl plus
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

# Sreen brightness controls
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10

# Power button
# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ccedilla resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

mode "launcher" {
        bindsym b exec firefox
        bindsym s exec slack
        bindsym f exec nautilus

        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym $mod+o mode "default"
}

# Move screen
mode "move" {
        bindsym h move workspace to output left
        bindsym j move workspace to output down
        bindsym k move workspace to output up
        bindsym l move workspace to output right

        bindsym Escape mode "default"
        bindsym Return mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+o mode "launcher"
bindsym $mod+m mode "move"

exec_always wallpaper
exec_always --no-startup-id polybar-launch
